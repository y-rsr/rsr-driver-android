<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/linner_bc"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">


            <com.ridesharerental.widgets.textviews.Custom_TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="Review"
                android:textColor="#E27910"
                android:textSize="14sp" />


            <RelativeLayout
                android:id="@+id/rl_close"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true">


                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/icn_close" />


            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#cbcbcb" />


        </RelativeLayout>


        <com.ridesharerental.widgets.textviews.Custom_TextView
            android:id="@+id/Tv_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text=""
            android:textColor="@color/text_gray"
            android:textSize="14sp" />


        <com.ridesharerental.widgets.textviews.Custom_Editext
            android:id="@+id/Ed_review_txt"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:gravity="top|left"
            android:hint=""
            android:padding="5dp"
            android:background="@drawable/edittext_bg"
            android:textColor="@color/text_gray"
            android:textSize="14sp" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <RatingBar
                android:id="@+id/Rb_ratingbar"
                style="@style/CustomRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:numStars="5"
                android:stepSize="1" />


            <com.ridesharerental.widgets.textviews.Custom_TextView
                android:id="@+id/star_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginTop="2dp"
                android:textColor="@color/ligth_gray"
                android:text="0 Star"
                android:layout_marginLeft="15dp"
                />



        </LinearLayout>





        <RelativeLayout
            android:id="@+id/Rl_submit"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_gravity="right"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/leave_review_submit">


            <com.ridesharerental.widgets.textviews.Custom_TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Submit"
                android:textColor="#ffffff"
                android:textSize="14sp" />


        </RelativeLayout>


    </LinearLayout>


</RelativeLayout>