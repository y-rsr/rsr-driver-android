<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingBottom="20dp"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">




    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white_color"
        android:padding="3dp"
        android:layout_height="wrap_content">
        
        <ImageView
            android:id="@+id/img_car"
            android:background="@drawable/placeholdercar"
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:layout_height="200dp" />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <com.ridesharerental.widgets.textviews.Custom_Textview_Bold
                android:layout_width="80dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="3dp"
                android:id="@+id/txt_status"
                android:background="@color/orange_color"
                android:text=""
                android:textColor="@color/white_color"
                android:textSize="13sp" />
        </FrameLayout>

        <RelativeLayout
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:id="@+id/profile_layout"
            android:layout_marginRight="10dp"
            android:layout_marginTop="165dp"
            android:layout_width="120dp"
            android:layout_height="wrap_content">

            <com.ridesharerental.widgets.CircleImageView
                android:layout_width="50dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/icn_profile"
                android:id="@+id/past_reservation_adapterprofileIMG"
                android:layout_height="50dp" />

            <com.ridesharerental.widgets.textviews.Custom_Textview_Medium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_host_name"
                android:layout_marginTop="10dp"
                android:layout_marginRight="0dp"
                android:text=""
                android:gravity="center"
                android:singleLine="true"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/past_reservation_adapterprofileIMG"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp" />

        </RelativeLayout>




        <com.ridesharerental.widgets.textviews.Custom_Textview_Bold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/profile_layout"
            android:id="@+id/title"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/img_car"
            android:textColor="@color/textview_bold"
            android:textSize="16sp" />

        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="2"
            android:id="@+id/linear_content"
            android:layout_below="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <LinearLayout
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="10dp"
                android:id="@+id/past_reservation_adapterLINERLAY1"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">


                <com.ridesharerental.widgets.textviews.Custom_Textview_Medium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_car_name"
                    android:layout_marginTop="10dp"
                    android:text="@string/rental_start"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp" />

                <com.ridesharerental.widgets.textviews.Custom_Textview_Medium
                    android:layout_width="wrap_content"
                    android:id="@+id/txt_start_date"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/ligth_black"
                    android:textSize="14sp" />


                <com.ridesharerental.widgets.textviews.Custom_Textview_Medium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/rental_end"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp" />

                <com.ridesharerental.widgets.textviews.Custom_Textview_Medium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/txt_end_date"
                    android:textColor="@color/ligth_black"
                    android:textSize="14sp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.ridesharerental.widgets.textviews.Custom_Textview_Medium
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Price : "
                        android:textColor="@color/colorPrimary"
                        android:textSize="14sp" />
                    <com.ridesharerental.widgets.textviews.Custom_Textview_Medium
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:id="@+id/txt_total_amt"
                        android:textColor="@color/yellow"
                        android:textSize="14sp" />

                </LinearLayout>






            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:layout_height="wrap_content">
                    <com.ridesharerental.widgets.textviews.Custom_Textview_Medium
                        android:layout_width="match_parent"
                        android:text="@string/vin"
                        android:textSize="14sp"
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/ligth_gray"
                        android:layout_height="wrap_content" />
                    <com.ridesharerental.widgets.textviews.Custom_Textview_Medium
                        android:layout_width="match_parent"
                        android:text=""
                        android:singleLine="true"
                        android:id="@+id/txt_vin_val"
                        android:gravity="center|left"
                        android:layout_weight="1"
                        android:textSize="14sp"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/ligth_gray"
                        android:layout_height="wrap_content" />

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <com.ridesharerental.widgets.textviews.Custom_Textview_Medium
                        android:layout_width="match_parent"
                        android:text="@string/plate"
                        android:layout_weight="1"
                        android:textSize="14sp"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/ligth_gray"
                        android:layout_height="wrap_content" />
                    <com.ridesharerental.widgets.textviews.Custom_Textview_Medium
                        android:layout_width="match_parent"
                        android:text=""
                        android:id="@+id/txt_plat_no_value"
                        android:gravity="center|left"
                        android:textSize="14sp"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/ligth_gray"
                        android:layout_height="wrap_content" />

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <com.ridesharerental.widgets.textviews.Custom_Textview_Medium
                        android:layout_width="match_parent"
                        android:text="@string/make"
                        android:layout_weight="1"
                        android:textSize="14sp"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/ligth_gray"
                        android:layout_height="wrap_content" />
                    <com.ridesharerental.widgets.textviews.Custom_Textview_Medium
                        android:layout_width="match_parent"
                        android:text=""
                        android:id="@+id/txt_make_value"
                        android:gravity="center|left"
                        android:layout_weight="1"
                        android:textSize="14sp"
                        android:layout_marginTop="5dp"
                        android:singleLine="true"
                        android:textColor="@color/ligth_gray"
                        android:layout_height="wrap_content" />

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <com.ridesharerental.widgets.textviews.Custom_Textview_Medium
                        android:layout_width="match_parent"
                        android:text="@string/model"
                        android:layout_weight="1"
                        android:textSize="14sp"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/ligth_gray"
                        android:layout_height="wrap_content" />
                    <com.ridesharerental.widgets.textviews.Custom_Textview_Medium
                        android:layout_width="match_parent"
                        android:text=""
                        android:id="@+id/txt_model_value"
                        android:layout_weight="1"
                        android:textSize="14sp"
                        android:singleLine="true"
                        android:gravity="center|left"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/ligth_gray"
                        android:layout_height="wrap_content" />

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <com.ridesharerental.widgets.textviews.Custom_Textview_Medium
                        android:layout_width="match_parent"
                        android:text="@string/year"
                        android:textSize="14sp"
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/ligth_gray"
                        android:layout_height="wrap_content" />
                    <com.ridesharerental.widgets.textviews.Custom_Textview_Medium
                        android:layout_width="match_parent"
                        android:text=""
                        android:id="@+id/txt_year_value"
                        android:layout_weight="1"
                        android:textSize="14sp"
                        android:singleLine="true"
                        android:gravity="center|left"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/ligth_gray"
                        android:layout_height="wrap_content" />

                </LinearLayout>


                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <com.ridesharerental.widgets.textviews.Custom_Textview_Medium
                        android:layout_width="match_parent"
                        android:text="@string/vehical_no"
                        android:textSize="14sp"
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/ligth_gray"
                        android:layout_height="wrap_content" />
                    <com.ridesharerental.widgets.textviews.Custom_Textview_Medium
                        android:layout_width="match_parent"
                        android:text=""
                        android:id="@+id/txt_vehical_no"
                        android:layout_weight="1"
                        android:textSize="14sp"
                        android:singleLine="true"
                        android:gravity="center|left"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/ligth_gray"
                        android:layout_height="wrap_content" />

                </LinearLayout>


                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:weightSum="2"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <com.ridesharerental.widgets.textviews.Custom_Textview_Medium
                        android:layout_width="match_parent"
                        android:text="@string/notes"
                        android:textSize="14sp"
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/ligth_gray"
                        android:layout_height="wrap_content" />
                    <com.ridesharerental.widgets.textviews.Custom_Textview_Medium
                        android:layout_width="match_parent"
                        android:text=""
                        android:id="@+id/txt_notes"
                        android:layout_weight="1"
                        android:textSize="14sp"
                        android:singleLine="true"
                        android:gravity="center|left"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/ligth_gray"
                        android:layout_height="wrap_content" />

                </LinearLayout>



            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:weightSum="2"
            android:id="@+id/linear_transactions"
            android:layout_below="@+id/linear_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.ridesharerental.widgets.textviews.Custom_Textview_Medium
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:id="@+id/txt_my_Transactions"
                android:layout_weight="1"
                android:layout_marginRight="1dp"
                android:background="@drawable/textview_border"
                android:text="My Transaction"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp" />

            <com.ridesharerental.widgets.textviews.Custom_Textview_Medium
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="@string/Review"
                android:id="@+id/txt_reviews"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:background="@drawable/textview_border"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp" />

        </LinearLayout>





        <RelativeLayout
            android:id="@+id/rel_similar_cars"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/linear_transactions"
            android:layout_width="match_parent"
            android:background="@drawable/main_skip_background"
            android:layout_height="40dp">

            <com.ridesharerental.widgets.textviews.Custom_Textview_Bold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:text="@string/show_similar_car"
                android:textColor="@color/white_color"
                android:textSize="18dp"
                android:textStyle="bold" />
        </RelativeLayout>

    </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>