<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:background="@color/white_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/rel_header"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/rel_location"
                    android:background="@drawable/gray_border"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="45dp">

                    <ImageView
                        android:background="@drawable/map"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/img_location"
                        android:layout_centerVertical="true"
                        android:layout_width="22dp"
                        android:layout_height="25dp" />



                    <com.ridesharerental.widgets.textviews.Custom_Textview_Medium
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/img_location"
                        android:paddingStart="10dp"
                        android:textSize="15sp"
                        android:layout_centerVertical="true"
                        android:id="@+id/txt_location_1"
                        android:hint="@string/location"
                        android:textColorHint="@color/ligth_gray_border"
                        android:singleLine="true"
                        android:gravity="center|left"
                        android:textColor="@color/thin_light"
                        android:layout_marginRight="0dp"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <com.ridesharerental.widgets.textviews.Custom_Textview_Medium
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/txt_location_1"
                        android:paddingStart="10dp"
                        android:textSize="15sp"
                        android:id="@+id/txt_location"
                        android:text=""
                        android:singleLine="true"
                        android:textColor="@color/textview_bold"
                        android:gravity="center|left"
                        android:layout_marginRight="0dp"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="50dp" />

                </RelativeLayout>




                <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/rel_check_In"
                    android:background="@drawable/gray_border"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="45dp">

                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/calendar"
                        android:id="@+id/img_check_in"
                        android:layout_centerVertical="true"
                        android:layout_width="22dp"
                        android:layout_height="25dp" />


                    <com.ridesharerental.widgets.textviews.Custom_Textview_Medium
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/img_check_in"
                        android:paddingStart="10dp"
                        android:textSize="15sp"
                        android:id="@+id/txt_check_In_1"
                        android:hint="@string/from_c"
                        android:textColorHint="@color/ligth_gray_border"
                        android:gravity="center|left"
                        android:layout_marginRight="0dp"
                        android:layout_weight="1"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <com.ridesharerental.widgets.textviews.Custom_Textview_Medium
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/txt_check_In_1"
                        android:paddingStart="10dp"
                        android:textSize="15sp"
                        android:textColor="@color/textview_bold"
                        android:id="@+id/txt_check_In"
                        android:text=""
                        android:gravity="center|left"
                        android:layout_marginRight="0dp"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="50dp" />

                </RelativeLayout>



                <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/rel_check_Out"
                    android:background="@drawable/gray_border"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="45dp">

                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/calendar"
                        android:id="@+id/img_check_out"
                        android:layout_centerVertical="true"
                        android:layout_width="22dp"
                        android:layout_height="25dp" />



                    <com.ridesharerental.widgets.textviews.Custom_Textview_Medium
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/img_check_out"
                        android:paddingStart="10dp"
                        android:textSize="15sp"
                        android:hint="@string/to_c"
                        android:textColorHint="@color/ligth_gray_border"
                        android:id="@+id/txt_check_Out_1"
                        android:gravity="center|left"
                        android:layout_marginRight="0dp"
                        android:layout_weight="1"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <com.ridesharerental.widgets.textviews.Custom_Textview_Medium
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/txt_check_Out_1"
                        android:paddingStart="10dp"
                        android:textSize="15sp"
                        android:text=""
                        android:textColor="@color/textview_bold"
                        android:id="@+id/txt_check_Out"
                        android:gravity="center|left"
                        android:layout_marginRight="0dp"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="50dp" />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">


                    <com.ridesharerental.widgets.textviews.Custom_Textview_Medium
                        android:layout_marginLeft="0dp"
                        android:paddingStart="10dp"
                        android:textSize="15sp"
                        android:id="@+id/txt_near_cars"
                        android:textColor="@color/ligth_gray_border"
                        android:gravity="center|left"
                        android:layout_marginRight="0dp"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp" />


                    <com.ridesharerental.widgets.textviews.Custom_Textview_Medium
                        android:layout_marginLeft="0dp"
                        android:paddingStart="0dp"
                        android:textSize="15sp"
                        android:id="@+id/txt_more_filter"
                        android:textColor="@color/app_color_1"
                        android:layout_alignParentRight="true"
                        android:text="@string/advance_filter"
                        android:gravity="center|left"
                        android:layout_marginRight="0dp"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp" />

                </RelativeLayout>

            </LinearLayout>








            <android.support.v7.widget.RecyclerView
                android:layout_marginTop="10dp"
                android:background="#cdcdcd"
                android:divider="@null"
                android:visibility="gone"
                android:layout_below="@+id/rel_header"
                android:id="@+id/recycle_skiper_img"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>






        </RelativeLayout>




    </RelativeLayout>

</RelativeLayout>
