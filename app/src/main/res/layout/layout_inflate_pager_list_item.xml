<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/slider_logo"
        android:id="@+id/img_1"
        android:layout_width="match_parent"
        android:layout_height="55dp" />

    <ImageView
        android:layout_marginTop="20dp"
        android:layout_below="@+id/img_1"
        android:id="@+id/layout_inflate_pager_list_item_IMG"
        android:layout_width="match_parent"
        android:layout_height="230dp"
       android:layout_centerInParent="true"
        />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="22sp"
        android:text="HELLO"
        android:layout_below="@+id/layout_inflate_pager_list_item_IMG"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/title"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:text="Chat With the Tasker"
        android:layout_marginTop="4dp"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/text1"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:text=""
        android:layout_marginTop="10dp"/>


</RelativeLayout>
