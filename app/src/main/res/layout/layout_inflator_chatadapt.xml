<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white_color"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">



        <LinearLayout
            android:id="@+id/layout_inflate_chatadapt_userLAY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:weightSum="1.3"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight=".2"
                android:gravity="left|bottom"
                android:layout_height="match_parent">
                <com.ridesharerental.widgets.CircleImageView
                    android:layout_width="50dp"
                    android:id="@+id/layout_inflate_chatadapt_userprofile_left"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/user_avatar"
                    android:layout_height="50dp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1.1"
                android:gravity="left"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_8sdp"
                    android:background="@drawable/grey_msg"
                    >
                    <com.ridesharerental.widgets.textviews.Custom_Textview_Medium
                        android:layout_width="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/layout_inflate_chatadapt_usermsg"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_alignParentLeft="true"
                        android:text=""
                        android:textColor="@color/white_color"
                        android:textSize="18dp" />
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/layout_inflate_chatadapt_usermsg"
                        android:id="@+id/rl_txt_attachment_top">
                        <com.ridesharerental.widgets.textviews.Custom_Textview_Medium
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/txt_attachment_top"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:text=""
                            android:textColor="@color/facebook_blue_color"
                            android:textSize="14dp" />
                    </RelativeLayout>
                    <com.ridesharerental.widgets.textviews.Custom_Textview_Medium
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_left_date"
                        android:layout_below="@+id/rl_txt_attachment_top"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:text=""
                        android:textColor="@color/white_color"
                        android:textSize="15dp" />

                </LinearLayout>
            </RelativeLayout>


        </LinearLayout>



        <LinearLayout
            android:id="@+id/layout_inflate_chatadapt_hostLAY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_inflate_chatadapt_userLAY"
            android:layout_alignParentRight="true"
            android:weightSum="1.3"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1.1"
                android:gravity="right"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_8sdp"
                    android:background="@drawable/green_msg"
                    >
                    <com.ridesharerental.widgets.textviews.Custom_Textview_Medium
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/layout_inflate_chatadapt_hostmsg"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:text=""
                        android:textColor="@color/ligth_gray"
                        android:textSize="18dp" />
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/layout_inflate_chatadapt_hostmsg"
                        android:id="@+id/rl_txt_attachment">
                        <com.ridesharerental.widgets.textviews.Custom_Textview_Medium
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/txt_attachment"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="10dp"
                            android:text=""
                            android:textColor="@color/facebook_blue_color"
                            android:textSize="14dp" />
                    </RelativeLayout>
                    <com.ridesharerental.widgets.textviews.Custom_Textview_Medium
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_right_date"
                        android:layout_below="@+id/rl_txt_attachment"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:text=""
                        android:textColor="@color/ligth_gray"
                        android:textSize="12dp" />

                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight=".2"
                android:gravity="right|bottom"
                android:layout_height="match_parent">
                <com.ridesharerental.widgets.CircleImageView
                    android:layout_width="50dp"
                    android:id="@+id/layout_inflate_chatadapt_hostprofile_right"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/user_avatar"
                    android:layout_height="50dp" />
            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>