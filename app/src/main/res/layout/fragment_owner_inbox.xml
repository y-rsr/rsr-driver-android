<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ridesharerental.fragments.OwnerInbox">
    <RelativeLayout
        android:id="@+id/action_layout"
        android:background="@drawable/card_bg"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/_3sdp"
        android:layout_height="55dp">

        <com.ridesharerental.widgets.textviews.Custom_Editext
            android:id="@+id/et_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/_5sdp"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp"
            android:hint="Search "
            android:paddingBottom="@dimen/_5sdp"
            android:background="@android:color/transparent"/>
        <RelativeLayout
            android:visibility="visible"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_alignParentRight="true">
            <ImageView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:src="@drawable/icon_search"/>
        </RelativeLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/action_layout"
        android:layout_width="match_parent"
        android:layout_marginTop="0dp"
        android:background="@color/white_color"
        android:layout_height="match_parent">

        <android.support.v4.widget.SwipeRefreshLayout
            android:layout_marginTop="10dp"
            android:background="@color/white_color"
            android:id="@+id/activity_main_swipe_refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <android.support.v7.widget.RecyclerView
                android:layout_marginTop="0dp"
                android:background="@color/white_color"
                android:divider="@null"
                android:visibility="visible"
                android:id="@+id/recycle_vehicle_car"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>

        </android.support.v4.widget.SwipeRefreshLayout>

        <com.ridesharerental.widgets.textviews.Custom_TextView
            android:layout_centerInParent="true"
            android:id="@+id/txt_no_data"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="@string/no_message_available"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</RelativeLayout>
