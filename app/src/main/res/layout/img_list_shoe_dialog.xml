<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/linner_bc"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">


            <com.ridesharerental.widgets.textviews.Custom_TextView
                android:id="@+id/Tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text=""
                android:textColor="@color/text_gray"
                android:textSize="14sp" />


            <RelativeLayout
                android:id="@+id/Rl_close"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true">


                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/icn_close" />


            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#cbcbcb" />


        </RelativeLayout>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:orientation="horizontal">
    <LinearLayout
        android:id="@+id/action_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:weightSum="2.2"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/Rl_choose"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@color/app_color_1"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp">

            <com.ridesharerental.widgets.textviews.Custom_TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="14sp"
                android:textColor="#ffffff"
                android:text="Choose pdf" />



        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/Rl_space"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight=".2"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"/>
        <RelativeLayout
            android:id="@+id/Rl_choose_img"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@color/app_color_1"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp">

            <com.ridesharerental.widgets.textviews.Custom_TextView
                android:id="@+id/img_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="14sp"
                android:textColor="#ffffff"
                android:text="Choose Image" />



        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
