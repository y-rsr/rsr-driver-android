<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@android:color/transparent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:paddingBottom="10dp"
        android:background="@drawable/white_shape"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/rel_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <com.ridesharerental.widgets.textviews.Custom_TextView
                android:id="@+id/custom_TextView"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="left"
                android:visibility="gone"
                android:text="Verify your mobile number in order to get SMS notifications"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <com.ridesharerental.widgets.textviews.Custom_TextView
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:id="@+id/txt_lable_bobile"
                android:layout_marginRight="10dp"
                android:text=""
                android:textStyle="bold"
                android:paddingStart="0dp"
                android:hint="Enter your phone number"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/gray_border"
                android:orientation="horizontal">

                <com.ridesharerental.widgets.textviews.Custom_Textview_Medium
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@color/thin_light"
                    android:gravity="center"
                    android:text="+1"
                    android:textSize="15sp"
                    android:id="@+id/txt_country_code"
                    android:textColor="@color/black" />

                <com.ridesharerental.widgets.textviews.Custom_Editext
                    android:id="@+id/edit_mobile_number"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginRight="0dp"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:inputType="number"
                    android:digits="0123456789"
                    android:background="@android:color/transparent"
                    android:hint="@string/phone_number"
                    android:paddingStart="10dp"
                    android:textSize="15sp" />

            </LinearLayout>


        </LinearLayout>



        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_below="@+id/rel_name"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rel_close"
                android:layout_weight="1"
                android:background="@drawable/gray_border"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <com.ridesharerental.widgets.textviews.Custom_TextView
                    android:layout_width="wrap_content"
                    android:text="Cancel"
                    android:textSize="18sp"
                    android:textColor="@color/ligth_gray"
                    android:layout_height="wrap_content" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rel_send"
                android:layout_weight="1"
                android:background="@drawable/primary_color_shape"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <com.ridesharerental.widgets.textviews.Custom_TextView
                    android:layout_width="wrap_content"
                    android:text="Submit"
                    android:textSize="18sp"
                    android:textColor="@color/white_color"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

        </LinearLayout>













    </RelativeLayout>

</RelativeLayout>
