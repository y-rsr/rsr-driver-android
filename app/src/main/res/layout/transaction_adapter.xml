<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <android.support.v7.widget.CardView
        android:id="@+id/card_parent"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rel_Top"
            android:layout_width="match_parent"
            android:background="@color/white_color"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.ridesharerental.widgets.textviews.Custom_Textview_Bold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:id="@+id/txt_car_name"
                        android:layout_alignParentLeft="true"
                        android:layout_toLeftOf="@+id/transaction_adapter_hdTXT1"
                        android:text=""
                        android:textColor="@color/ligth_gray"
                        android:textSize="18dp" />

                    <com.ridesharerental.widgets.textviews.Custom_Textview_Medium
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:id="@+id/transaction_adapter_hdTXT1"
                        android:padding="10dp"
                        android:text="@string/details"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18dp" />


                </RelativeLayout>
                <View
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="#cdcdcd"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="wrap_content">

                    <com.ridesharerental.widgets.textviews.Custom_Textview_Medium
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="0dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:id="@+id/transaction_adapter_rentalTXT"
                        android:layout_alignParentLeft="true"
                        android:layout_toLeftOf="@+id/transaction_adapter_priceTXT"
                        android:text="@string/rental_cost"
                        android:textColor="@color/ligth_gray"
                        android:textSize="16dp" />

                    <com.ridesharerental.widgets.textviews.Custom_Textview_Medium
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_marginTop="5dp"
                        android:id="@+id/txt_no_days"
                        android:layout_below="@+id/transaction_adapter_rentalTXT"
                        android:text=""
                        android:textColor="@color/colorPrimary"
                        android:textSize="13dp" />




                    <com.ridesharerental.widgets.textviews.Custom_Textview_Medium
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:id="@+id/transaction_adapter_priceTXT"
                        android:padding="10dp"
                        android:text="5000"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16dp" />


                </RelativeLayout>


                <View
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="#cdcdcd"/>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.ridesharerental.widgets.textviews.Custom_Textview_Medium
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:id="@+id/transaction_adapter_totalTXT"
                        android:layout_alignParentLeft="true"
                        android:layout_toLeftOf="@+id/transaction_adapter_totalvalTXT"
                        android:text="@string/total"
                        android:textColor="@color/ligth_gray"
                        android:textSize="16dp" />


                    <com.ridesharerental.widgets.textviews.Custom_Textview_Medium
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:id="@+id/transaction_adapter_totalvalTXT"
                        android:padding="10dp"
                        android:text=""
                        android:textColor="@color/orange_color"
                        android:textSize="16dp" />


                </RelativeLayout>

            </LinearLayout>



        </RelativeLayout>









        </android.support.v7.widget.CardView>


    <com.ridesharerental.widgets.ExpandableHeightListView
        android:layout_below="@+id/card_parent"
        android:id="@+id/my_transaction_layout_listview_extent"
        android:background="#cdcdcd"
        android:layout_width="match_parent"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:divider="@null"
        android:layout_height="wrap_content">

    </com.ridesharerental.widgets.ExpandableHeightListView>

    <android.support.v7.widget.CardView
        android:visibility="gone"
        android:id="@+id/card_deatils"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/card_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginTop="1dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.ridesharerental.widgets.textviews.Custom_Textview_Medium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:id="@+id/transaction_rental_cost_1"
                    android:layout_alignParentLeft="true"
                    android:text="@string/rental_cost"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <com.ridesharerental.widgets.textviews.Custom_Textview_Medium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/txt_rental_cost_days"
                    android:layout_below="@+id/transaction_rental_cost_1"
                    android:text="Rented car for 2 days"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14dp" />


                <com.ridesharerental.widgets.textviews.Custom_Textview_Medium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="5000"
                    android:padding="10dp"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16dp" />


            </RelativeLayout>


            <View
                android:background="#cdcdcd"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"/>



            <RelativeLayout
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.ridesharerental.widgets.textviews.Custom_Textview_Medium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:id="@+id/transaction_rental_cost_2"
                    android:layout_alignParentLeft="true"
                    android:text="@string/rental_cost"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <com.ridesharerental.widgets.textviews.Custom_Textview_Medium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/txt_rental_cost_days_2"
                    android:layout_below="@+id/transaction_rental_cost_2"
                    android:text="Rented car for 2 days"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14dp" />


                <com.ridesharerental.widgets.textviews.Custom_Textview_Medium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="5000"
                    android:padding="10dp"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16dp" />




            </RelativeLayout>

            <View
                android:background="#cdcdcd"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/txt_rental_cost_days_2"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"/>




            <RelativeLayout
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.ridesharerental.widgets.textviews.Custom_Textview_Medium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:id="@+id/transaction_rental_cost_3"
                    android:layout_alignParentLeft="true"
                    android:text="@string/rental_cost"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <com.ridesharerental.widgets.textviews.Custom_Textview_Medium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/txt_rental_cost_days_3"
                    android:layout_below="@+id/transaction_rental_cost_3"
                    android:text="Rented car for 2 days"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14dp" />


                <com.ridesharerental.widgets.textviews.Custom_Textview_Medium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="5000"
                    android:padding="10dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16dp" />



            </RelativeLayout>




        </LinearLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>