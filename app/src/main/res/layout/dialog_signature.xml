<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/_10sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/_10sdp"
    >

    <LinearLayout
        android:id="@+id/ll_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:gravity="center"
        android:layout_below="@+id/close_btn_signature_dialog"
        android:paddingBottom="@dimen/_10sdp"
        android:background="@color/white_color"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2.5"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:layout_marginLeft="30dp"
                android:visibility="gone"
                android:layout_marginRight="30dp"
                android:layout_height="100dp" />

            <RelativeLayout
                android:id="@+id/signature_pad_container"
                android:layout_width="fill_parent"
                android:layout_height="220dp"
                android:layout_marginTop="16dp"
                android:layout_weight="2"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="60dp"
                    android:layout_marginBottom="50dp"
                    android:background="@drawable/card_bg"
                    android:layout_weight="2"
                    >
                </RelativeLayout>
                <com.williamww.silkysignature.views.SignaturePad
                    android:id="@+id/signature_pad"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    app:penColor="@color/black"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="60dp"
                    android:background="#f1f1f1"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_alignParentBottom="true"></RelativeLayout>
            </RelativeLayout>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <com.ridesharerental.widgets.textviews.Custom_TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/signature_note"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/buttonContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <com.ridesharerental.widgets.textviews.Custom_TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:background="@drawable/gray_border"
                    android:gravity="center"
                    android:padding="16dp"
                    android:id="@+id/txt_signCancel"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/black"
                    android:text="Clear"/>
                <com.ridesharerental.widgets.textviews.Custom_TextView
                    android:layout_width="0dp"
                    android:id="@+id/txt_signOK"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:background="@drawable/primary_color_shape"
                    android:padding="16dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/white_color"
                    android:text="Ok"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <com.ridesharerental.widgets.textviews.Custom_TextView
        android:layout_width="match_parent"
        android:visibility="visible"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/colorPrimary"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_height="wrap_content" />
    <com.ridesharerental.widgets.textviews.Custom_Buttton_Bold
        android:id="@+id/close_btn_signature_dialog"
        android:layout_alignParentRight="true"
        android:layout_width="30dp"
        android:visibility="visible"
        android:layout_marginRight="@dimen/_10sdp"
        android:background="@drawable/dialog_close"
        android:layout_height="30dp" />
</RelativeLayout>