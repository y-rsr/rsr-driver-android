<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">



    <com.ridesharerental.widgets.textviews.Custom_Check_box
        android:id="@+id/check_features"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="0sp"
        android:scaleX="1.0"
        android:visibility="gone"
        android:scaleY="1.0"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:clickable="false"
        android:buttonTint="@color/app_color_1"
        android:backgroundTint="@color/ligth_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_marginLeft="1dp"
        android:background="@drawable/uncheck_new"
        android:id="@+id/img_item"
        android:layout_centerVertical="true"
        android:layout_width="20dp"
        android:layout_height="20dp" />

    <com.ridesharerental.widgets.textviews.Custom_Textview_Medium
        android:id="@+id/txt_single"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/img_item"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:foregroundGravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:textSize="16sp"
        android:maxLines="2"
        android:lineSpacingExtra="1dp"
        android:text="dcdbvhdfvhdhdh"
        android:textColor="@color/ligth_black"
        android:layout_height="50dp" />

    </RelativeLayout>

</RelativeLayout>
