<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:visibility="visible"
        android:id="@+id/card_deatils"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:layout_below="@+id/card_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginTop="0dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.ridesharerental.widgets.textviews.Custom_Textview_Medium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:id="@+id/transaction_rental_cost_1"
                    android:layout_alignParentLeft="true"
                    android:text="@string/rental_extent_cost"
                    android:textColor="@color/ligth_gray"
                    android:textSize="16dp" />

                <com.ridesharerental.widgets.textviews.Custom_Textview_Medium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/txt_rental_extent_days"
                    android:layout_below="@+id/transaction_rental_cost_1"
                    android:text=""
                    android:textColor="@color/colorPrimary"
                    android:textSize="13dp" />


                <com.ridesharerental.widgets.textviews.Custom_Textview_Medium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/transaction_rental_cost_1"
                    android:layout_alignParentRight="true"
                    android:text="52456"
                    android:paddingRight="10dp"
                    android:id="@+id/txt_ented_price"
                    android:gravity="center"
                    android:textColor="@color/orange_color"
                    android:textSize="16dp" />
                <com.ridesharerental.widgets.textviews.Custom_Textview_Medium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingRight="10dp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/txt_date"
                    android:text="etfatgrg"
                    android:textColor="@color/ligth_gray"
                    android:textSize="13dp" />

            </RelativeLayout>


            <View
                android:background="#cdcdcd"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"/>















        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
